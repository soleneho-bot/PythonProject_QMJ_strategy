import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns
from datetime import datetime, timedelta

# Pour charger les variables d'environnement (si vous exécutez localement)
from dotenv import load_dotenv
import os

# --- Connexion à la base de données ---
# S'assurer que le fichier .env existe à la racine du projet
load_dotenv()
DB_URL = os.getenv("DB_URL")

if not DB_URL:
    print("❌ Erreur : DB_URL non trouvée. Assurez-vous que le fichier .env est à la racine et contient DB_URL.")
    # Si vous êtes sur Colab, utilisez :
    # from google.colab import userdata
    # DB_URL = userdata.get('DB_URL')
    if not DB_URL:
        raise ValueError("DB_URL non configurée.")

from sqlalchemy import create_engine
engine = create_engine(DB_URL)

print("✅ Connexion à la base de données établie.")

# Charger les derniers scores QMJ
query_scores = """
SELECT "Date", "Ticker", "Quality_Score", "z_Profitability", "z_Growth", "z_Safety", "z_Payout", "Price"
FROM qmj_scores
ORDER BY "Date" DESC, "Quality_Score" DESC
"""
qmj_data = pd.read_sql(query_scores, engine, parse_dates=['Date'])

if qmj_data.empty:
    print("⚠️ Aucune donnée QMJ trouvée dans la base de données. Exécutez src/main.py d'abord.")
else:
    print(f"Loaded {len(qmj_data)} QMJ scores.")
    print("Top 5 des dernières évaluations :")
    latest_date = qmj_data['Date'].max()
    print(qmj_data[qmj_data['Date'] == latest_date].head())

if not qmj_data.empty:
    latest_date = qmj_data['Date'].max()
    top_10 = qmj_data[qmj_data['Date'] == latest_date].sort_values('Quality_Score', ascending=False).head(10)

    print("\n--- Top 10 Actions par Score QMJ (Dernière date) ---")
    print(top_10[['Ticker', 'Quality_Score', 'z_Profitability', 'z_Growth', 'z_Safety', 'z_Payout', 'Price']].round(2))

if not qmj_data.empty:
    latest_date = qmj_data['Date'].max()
    latest_scores = qmj_data[qmj_data['Date'] == latest_date]

    # Sélectionner les scores de facteurs et le Quality_Score
    factor_columns = ['z_Profitability', 'z_Growth', 'z_Safety', 'z_Payout', 'Quality_Score']
    
    # Prendre un échantillon ou les meilleurs tickers pour la visualisation
    # Ici, nous prenons les 20 meilleurs tickers par Quality_Score
    top_tickers_for_heatmap = latest_scores.sort_values('Quality_Score', ascending=False).head(20)
    
    heatmap_data = top_tickers_for_heatmap.set_index('Ticker')[factor_columns]

    plt.figure(figsize=(12, 8))
    sns.heatmap(heatmap_data, annot=True, cmap='RdYlGn', fmt=".2f", linewidths=.5)
    plt.title(f'Heatmap des Facteurs de Qualité pour le Top 20 (Date: {latest_date.strftime("%Y-%m-%d")})')
    plt.show()

if not qmj_data.empty:
    latest_date = qmj_data['Date'].max()
    scores_latest = qmj_data[qmj_data['Date'] == latest_date]

    plt.figure(figsize=(10, 6))
    sns.histplot(scores_latest['Quality_Score'].dropna(), kde=True, bins=30)
    plt.title(f'Distribution des Scores de Qualité QMJ (Date: {latest_date.strftime("%Y-%m-%d")})')
    plt.xlabel('Quality Score')
    plt.ylabel('Fréquence')
    plt.grid(True, linestyle='--', alpha=0.6)
    plt.show()

if not qmj_data.empty:
    # Remplacez 'AAPL' par le ticker que vous souhaitez suivre
    ticker_to_track = 'MSFT' 
    
    ticker_history = qmj_data[qmj_data['Ticker'] == ticker_to_track].sort_values('Date')

  if not ticker_history.empty:
      plt.figure(figsize=(12, 6))
      plt.plot(ticker_history['Date'], ticker_history['Quality_Score'], marker='o', linestyle='-')
      plt.title(f'Évolution du Score de Qualité QMJ pour {ticker_to_track}')
      plt.xlabel('Date')
      plt.ylabel('Quality Score')
      plt.grid(True, linestyle='--', alpha=0.6)
      plt.show()
  else:
      print(f"Historique non trouvé pour {ticker_to_track}.")
